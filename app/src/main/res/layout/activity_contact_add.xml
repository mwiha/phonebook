<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/imageseven"
    tools:context=".ContactAddActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firsteditText"
        android:backgroundTint="#fff"
        android:hint="First Name"
        android:textColorHint="#fff"
        android:paddingLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:layout_marginTop="64dp" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lasteditText"
        android:backgroundTint="#fff"
        android:hint="Last Name"
        android:textColorHint="#fff"
        android:layout_below="@+id/firsteditText"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:layout_marginTop="20dp" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numbereditText"
        android:backgroundTint="#fff"
        android:hint="Phone"
        android:textColorHint="#fff"
        android:layout_below="@+id/lasteditText"
        android:paddingLeft="5dp"
        android:inputType="phone"
        android:maxLength="13"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:background="@drawable/buttonstyle"
        android:id="@+id/addButton"
        android:layout_below="@+id/numbereditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />
</RelativeLayout>
